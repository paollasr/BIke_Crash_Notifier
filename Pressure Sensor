
const int pressureSensor = A0;
int fsrReading;
int LEDpin= 13;

 
void setup() {
Serial.begin(9600);
pinMode(LEDpin, OUTPUT);

}


bool isRiderPresent(void) {
  fsrReading = analogRead(pressureSensor);       //Read and save analog value from potentiometer
  fsrReading = map(fsrReading, 0, 1023, 0, 255);
  
  if ( fsrReading > 1 )  {
    Serial.println(fsrReading);
    
    return true;
    
  } else{
    return false;
  }
 
}

void loop() {
      
  if ( isRiderPresent() )  {
     Serial.println("Rider present");
     digitalWrite(LEDpin, HIGH);
     delay(100);
  }
  else{
     Serial.println("no rider");
     digitalWrite(LEDpin, LOW);
     delay(100);
  }
 delay(1000);  //  Evaluate every 10 secs
}

 


  
